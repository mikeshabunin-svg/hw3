{
  "openapi": "3.0.1",
  "info": {
    "title": "AntiPlagiarism.Gateway.Api",
    "version": "1.0"
  },
  "paths": {
    "/api/works/{workId}/submit": {
      "post": {
        "tags": [
          "AntiPlagiarism.Gateway.Api"
        ],
        "operationId": "SubmitWork",
        "parameters": [
          {
            "name": "workId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SubmissionAnalysisResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "502": {
            "description": "Bad Gateway"
          }
        }
      }
    },
    "/api/reports/{reportId}": {
      "get": {
        "tags": [
          "AntiPlagiarism.Gateway.Api"
        ],
        "operationId": "GetReportViaGateway",
        "parameters": [
          {
            "name": "reportId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReportResponseDto"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          },
          "502": {
            "description": "Bad Gateway"
          }
        }
      }
    },
    "/api/works/{workId}/reports": {
      "get": {
        "tags": [
          "AntiPlagiarism.Gateway.Api"
        ],
        "operationId": "GetWorkReportsViaGateway",
        "parameters": [
          {
            "name": "workId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WorkReportsResponseDto"
                }
              }
            }
          },
          "502": {
            "description": "Bad Gateway"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ReportResponseDto": {
        "type": "object",
        "properties": {
          "reportId": {
            "type": "string",
            "format": "uuid"
          },
          "submissionId": {
            "type": "string",
            "format": "uuid"
          },
          "workId": {
            "type": "string",
            "nullable": true
          },
          "studentId": {
            "type": "string",
            "nullable": true
          },
          "fileId": {
            "type": "string",
            "format": "uuid"
          },
          "isPlagiarism": {
            "type": "boolean"
          },
          "similarityPercent": {
            "type": "number",
            "format": "double"
          },
          "baseSubmissionId": {
            "type": "string",
            "format": "uuid",
            "nullable": true
          },
          "createdAtUtc": {
            "type": "string",
            "format": "date-time"
          },
          "submittedAtUtc": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "SubmissionAnalysisResponseDto": {
        "type": "object",
        "properties": {
          "submissionId": {
            "type": "string",
            "format": "uuid"
          },
          "workId": {
            "type": "string",
            "nullable": true
          },
          "studentId": {
            "type": "string",
            "nullable": true
          },
          "fileId": {
            "type": "string",
            "format": "uuid"
          },
          "status": {
            "type": "string",
            "nullable": true
          },
          "reportId": {
            "type": "string",
            "format": "uuid"
          },
          "isPlagiarism": {
            "type": "boolean"
          },
          "similarityPercent": {
            "type": "number",
            "format": "double"
          },
          "baseSubmissionId": {
            "type": "string",
            "format": "uuid",
            "nullable": true
          },
          "createdAtUtc": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "WorkReportsResponseDto": {
        "type": "object",
        "properties": {
          "workId": {
            "type": "string",
            "nullable": true
          },
          "reports": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ReportResponseDto"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}